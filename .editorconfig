# editorconfig.org
# Configure this to your coding style. For example, if you prefer
# spaces for indentation, change indent_style to space, and change
# the indent_size to your liking.

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.php]
indent_style = tab
indent_size = 4

# Two spaces at EOL inserts <br>
[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4